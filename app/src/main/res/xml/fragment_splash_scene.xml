<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:defaultDuration="1000">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bgSplash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/clickAreaSplash"
            app:layout_constraintEnd_toEndOf="@id/clickAreaSplash"
            app:layout_constraintStart_toStartOf="@id/clickAreaSplash"
            app:layout_constraintTop_toTopOf="@id/clickAreaSplash">
            <CustomAttribute
                app:attributeName="CornerRadiusRate"
                app:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/login">
        <Constraint
            android:id="@+id/bgSplash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/spaceSplashInputTop">
            <CustomAttribute
                app:attributeName="CornerRadiusRate"
                app:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/clickAreaSplash"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/bgSplash"
            app:layout_constraintStart_toStartOf="@id/bgSplash" />

        <Constraint
            android:id="@+id/tilSplashPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/clickAreaSplash"
            app:layout_constraintEnd_toEndOf="@id/bgSplash"
            app:layout_constraintStart_toStartOf="@id/bgSplash"
            app:layout_constraintWidth_percent="0.75" />

        <Constraint
            android:id="@+id/tilSplashPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/tilSplashPassword"
            app:layout_constraintEnd_toEndOf="@id/tilSplashPassword"
            app:layout_constraintStart_toStartOf="@id/tilSplashPassword" />


    </ConstraintSet>
    <ConstraintSet android:id="@+id/loginInput">
        <Constraint
            android:id="@+id/bgSplash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/spaceSplashInputTop">
            <CustomAttribute
                app:attributeName="CornerRadiusRate"
                app:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/clickAreaSplash"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="@id/bgSplash"
            app:layout_constraintEnd_toEndOf="@id/bgSplash"
            app:layout_constraintStart_toStartOf="@id/bgSplash" />

        <Constraint
            android:id="@+id/tilSplashPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/clickAreaSplash"
            app:layout_constraintEnd_toEndOf="@id/bgSplash"
            app:layout_constraintStart_toStartOf="@id/bgSplash"
            app:layout_constraintWidth_percent="0.75" />

        <Constraint
            android:id="@+id/tilSplashPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/tilSplashPassword"
            app:layout_constraintEnd_toEndOf="@id/tilSplashPassword"
            app:layout_constraintStart_toStartOf="@id/tilSplashPassword" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/end" />

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start" />

    <Transition
        app:constraintSetEnd="@id/login"
        app:constraintSetStart="@id/start">
        <KeyFrameSet>
            <KeyAttribute
                android:rotationX="90"
                app:framePosition="50"
                app:motionTarget="@id/tvSplashButtonText" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="50"
                app:motionTarget="@id/tvSplashButtonText" />
            <KeyTrigger
                app:framePosition="50"
                app:motionTarget="@id/tvSplashButtonText"
                app:onNegativeCross="showLoginText"
                app:onPositiveCross="showLoginContinueText" />
        </KeyFrameSet>
    </Transition>
    <Transition
        app:constraintSetEnd="@id/loginInput"
        app:constraintSetStart="@id/login"
        app:duration="300" />

</MotionScene>

